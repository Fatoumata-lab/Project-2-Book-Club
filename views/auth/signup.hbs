<form method="post" action="/auth/signup" class="form">
    {{> flashMessage }}

    <label for="firstName">First name</label>
    <input class="input" type="text" id="firstName" name="firstName" value="test name">
    <label for="lastName">Last name</label>
    <input class="input" type="text" id="lastName" name="lastName" value="test lastName">
    <label for="email">email</label>
    <input class="input" type="email" id="email" name="email" value="test@email.com">
    <label for="password">password</label>
    <input class="input" type="password" id="password" name="password" value="12345">
    <button class="btn">signup</button>
</form>
<p>
    Already got an account ? <a href="/users/signin">signin</a>
</p>