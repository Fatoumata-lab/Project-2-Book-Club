<h1>{{book.title}}</h1>
<div class="bookcard-container">
    <div>
        <img src="{{book.cover}}" alt="">
        <p>

            Author: {{book.author}}<br>
            Year: {{book.year}}<br>
            Genre: {{book.genre}}<br>
            Synopsis: {{book.synopsis}}
        </p>
        <a href="/books/delete/{{book.id}}">Delete</a>

        <a href="/books/edit/{{book.id}}">EDIT</a>
    </div>

    <div>
        <form class="form-favorites" action="/favorites/add/{{book.id}}" method="post">
            <button>Add to my whishlist</button>
        </form>
    </div>
    <div>
        <form class="formcomment" action="/comments/create/{{book.id}}" method="post">
            <label for="comment">Comment</label>
            <input class="input" type="text" id="comment" name="comment" value="test comment">
            <button>Post comment</button>

    </div>
    {{#each comments}}
    <p>
        {{this.date}}<br>
        {{this.user.lastName}}<br>
        {{this.comment}}
    </p>
        {{!-- <a href="/comments/delete/{{comment._id}}">Delete</a> --}}
    {{/each}}
</div>