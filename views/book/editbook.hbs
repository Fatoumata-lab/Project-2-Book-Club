<h1 class = "editbook">Edit book</h1>

{{!-- action represents the ROUTE you wanna target --}}
<form method="post" enctype="multipart/form-data" action="/books/edit/{{book.id}}" class="form">

    <label for="title">Title</label>
    <input class="input" type="text" id="title" name="title" value="{{book.title}} "><br>
    <label for="author">Author</label>
    <input id="author" class="input" type="text" name="author" value="{{book.author}}"><br>

    <label for="year">Year</label>
    <input id="year" class="input" type="number" name="year" value="{{book.year}}"><br>
    <label for="genre">Genre</label>
    <input id="genre" class="input" type="text" name="genre" value="{{book.genre}}"><br>
    <label for="synopsis">Synopsis</label>
    <input id="synopsis" class="input" type="text" name="synopsis" value="{{book.synopsis}}"><br>
    <label for="cover">Cover</label>
    <input id="cover" class="input" type="file" name="cover" ><br>
    <button class="btn">Save changes !</button>
</form>
    